<h1 class="page-header">Log In</h1>
<%= form_tag(login_path, class: 'form') do %>
  <div class="form-group">
    <%= label_tag(:username, 'Username', class: 'form-label') %>
    <%= text_field_tag(:username, '', class: 'form-control') %>
  </div>
  <div class="form-group">
    <%= label_tag(:password, 'Password', class: 'form-label') %>
    <%= password_field_tag(:password, '', class: 'form-control') %>
    <!-- <input type="password" name="password" class ="form-control input-lg placeholder">-->
  </div> 
  <div class="form-group">
    <%= submit_tag('Login', class: 'btn btn-success btn-lg')%>
  </div>
<% end %>
