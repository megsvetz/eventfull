<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Venue</th>
      <th>Address</th>
    </tr>
  </thead>
  <tbody>
    <% @venues.each do |v| %>
    <tr>
      <td><%= link_to(v.name, venue_path(v)) %></td>
      <td><%= v.name %></td>
      <td><%= v.location %></td>
      
      <% if user_signed_in? %>
        <td>
          <a href="<%= edit_venue_path(v) %>" class="btn btn-info">
            <span class = "glyphicon glyphicon-pencil"></span>
          </a>
          <a href="<%= edit_venue_path(v) %>" class="btn btn-danger" data-method="delete">
            <span class="glyphicon glyphicon-trash"></span>
          </a>
        </td>
      <% end %>

    </tr>
  <% end %>
</tbody>
</table>
